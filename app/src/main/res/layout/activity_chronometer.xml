<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.webmyne.controllerdemo.ui.ChronometerActivity">


    <Chronometer
        android:id="@+id/simpleChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#0f0"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <Button
        android:textColor="@color/colorWhiteSmoke"
        android:background="@color/colorBlack"
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Start" />

    <Button
        android:textColor="@color/colorWhiteSmoke"
        android:background="@color/colorBlack"
        android:id="@+id/stopButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="stop" />

    <Button
        android:textColor="@color/colorWhiteSmoke"
        android:background="@color/colorBlack"
        android:id="@+id/restartButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="restart" />

    <Button
        android:textColor="@color/colorWhiteSmoke"
        android:background="@color/colorBlack"
        android:id="@+id/setFormat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="setFormat" />

    <Button
        android:textColor="@color/colorWhiteSmoke"
        android:background="@color/colorBlack"
        android:id="@+id/clearFormat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="clearFormat" />


    <com.webmyne.controllerdemo.adapter.CustomChronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#0f0"
        android:padding="10dp"
        android:text="Chronometer"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

</LinearLayout>
