<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.webmyne.controllerdemo.ui.AutoCompleteTextViewActivity">


    <AutoCompleteTextView
        android:id="@+id/autoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Simple Auto TextView"
        android:textColorHint="@color/colorBlack" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:completionHint="End"
        android:dropDownHeight="wrap_content"
        android:dropDownSelector="@color/colorRed"
        android:dropDownVerticalOffset="5dp"
        android:ems="10"
        android:hint="Completion Hint and drop down"
        android:textColorHint="@color/colorBlack" />


    <com.webmyne.controllerdemo.adapter.CustomAutoCompleteTextView
        android:id="@+id/autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"
        android:textColorHint="@color/colorBlack"
        android:hint="Custom Auto Complete TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/tv_currency"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
